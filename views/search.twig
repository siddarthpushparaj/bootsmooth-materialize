{% extends "base.twig" %}
{% block heading %}
<h3>{{title}}</h3>
</div>
{% endblock %}

{% block content %}
<section>
{% if posts %}
<div class="row posts-row">
{% for post in posts %}
<div class="col s12 m4 post-tease">
	{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
</div>
{% endfor %}
</div>
{% else %}
<p>No results found.</p>
{% endif %}

{% include 'pagination.twig' %}
</section>

{% endblock %}
{% block footer %}
{{ parent() }}
{% include 'masonry-js.twig' %}
{% endblock %}