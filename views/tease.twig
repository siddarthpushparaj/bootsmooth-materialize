{% block content %}
<div class="card hoverable">
	<div class="card-image">
	{% if post.get_thumbnail %}
		<a href="{{post.link}}">
			<img class="responsive-img" src="{{post.thumbnail.src}}" />
		</a>
	{% endif %}
	</div>
	<div class="card-content">
		<span class="card-title">{{post.title}}</span>
		<div class="post-meta">
			<p>
				<i class="material-icons">access_time</i> {{ post.post_date|date('F j, Y') }}
			</p>
			<p>
				 <i class="material-icons">person</i> {{ post.author.name }}
			</p>
		</div>
		<p>{{post.post_content|excerpt(15)}}...</p>
	</div>
	<div class="card-action right-align">
	  <a href="{{post.link}}">Read</a>
	</div>
</div>
{% endblock %}
